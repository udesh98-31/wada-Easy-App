<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp">


    <TableLayout
        android:layout_width="410dp"
        android:layout_height="218dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:background="#EFDFE5"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/service"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#3F51B5"
                android:textSize="20dp"
                android:drawableStart="@drawable/ic_baseline_miscellaneous_services_24"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_baseline_miscellaneous_services_24" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/providerName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#150F0F"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_baseline_person_24" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/WorkingAreas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:text="@string/WorkingAreasRow"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/area1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:textColor="#0E0808"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/area2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:textColor="#100B0B"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/viewBtn"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:text="@string/RowBtn" />
        </TableRow>
    </TableLayout>

</RelativeLayout>